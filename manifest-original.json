{
  "manifest_version": 3,
  "name": "全自动化工作流for前沿探索",
  "version": "1.0.0",
  "description": "用于前沿探索的全自动化工作流系统，包含论文初筛、Github调研、开源追踪三大功能模块",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting",
    "background"
  ],
  "host_permissions": [
    "https://github.com/*",
    "https://arxiv.org/*",
    "https://scholar.google.com/*",
    "https://www.semanticscholar.org/*",
    "https://feishu.cn/*",
    "https://openrouter.ai/*",
    "https://api.allorigins.win/*",
    "https://api.semanticscholar.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "前沿探索工作流",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "extension-debug.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
